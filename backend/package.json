{
  "name": "brain-agriculture-backend",
  "version": "1.0.0",
  "description": "Brain Agriculture API - Rural Producer Management System",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:brk": "nest start --debug-brk --watch",
    "start:prod": "node dist/main.js",
    "dev": "nest start --watch",
    "debug": "nest start --debug=0.0.0.0:9229 --watch",
    "debug:brk": "nest start --debug-brk=0.0.0.0:9229 --watch",
    "debug:setup": "node scripts/debug-setup.js setup",
    "debug:enable": "node scripts/debug-setup.js enable",
    "debug:disable": "node scripts/debug-setup.js disable",
    "debug:status": "node scripts/debug-setup.js status",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "seed": "ts-node scripts/seed-data.ts",
    "seed:prod": "node dist/scripts/seed-data.js",
    "db:init": "mongosh brain_agriculture scripts/init-mongo.js",
    "docker:build": "docker build -t brain-agriculture-backend .",
    "docker:run": "docker run -p 3001:3001 brain-agriculture-backend"
  },
  "keywords": [
    "agriculture",
    "rural",
    "producer",
    "management",
    "api",
    "node",
    "typescript",
    "mongodb"
  ],
  "author": "Brain Agriculture",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^10.4.18",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.18",
    "@nestjs/mongoose": "^10.1.0",
    "@nestjs/platform-express": "^10.4.18",
    "@nestjs/swagger": "^7.4.2",
    "@nestjs/terminus": "^10.3.0",
    "@nestjs/throttler": "^5.2.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.2.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.15.1",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.9",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.18",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.57",
    "@types/supertest": "^2.0.16",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}